<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:paddingTop="0dp" android:background="@color/bgcolor"
	android:orientation="vertical">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"  android:background="@color/dt_info_bg"
       android:paddingTop="0dp" android:paddingBottom="2dp">
       <TextView android:id="@+id/dt_info_book"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="14sp" 
            android:gravity="center" android:layout_weight="1"/>   
    </LinearLayout> 
    <include layout="@layout/common_ad_bottom" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:background="@color/dt_info_bg" android:paddingTop="5dp"
		android:paddingBottom="5dp">
		<TextView android:id="@+id/dt_info_weekly_expense"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="14sp" android:textColor="@color/expense_fgl"
			android:gravity="center" android:layout_weight="1" />
		<TextView android:id="@+id/dt_info_monthly_expense"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="14sp" android:textColor="@color/expense_fgl"
			android:gravity="center" android:layout_weight="1" />
		<TextView android:id="@+id/dt_info_cumulative_cash"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="14sp" android:textColor="@color/asset_fgl"
			android:gravity="center" android:layout_weight="1" />
	</LinearLayout>
	<GridView android:id="@+id/gridView1" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:numColumns="2" android:layout_weight="1"></GridView>

</LinearLayout>
